<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="nation"
            type="com.wolf.liuxue.bean.NewBtn"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="@dimen/d5"
        android:paddingBottom="@dimen/d5"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d60"
            android:layout_height="@dimen/d60"
            android:scaleType="fitXY"
            app:imageUrl="@{nation.circleImageUrl}"
            />

        <TextView
            style="@style/common_text_size_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:text="@{nation.name}"/>

    </LinearLayout>

</layout>